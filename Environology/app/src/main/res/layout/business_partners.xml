<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BusinessPartners"
    android:orientation="vertical"
    android:layout_marginBottom="75dp"

    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:text="Our Partners" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bedok Mall"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/bedokimage"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/bedok"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="JCube Mall"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/jcubeimage"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@drawable/jcube"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ION Orchard Mall"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/ionimage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ion"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>